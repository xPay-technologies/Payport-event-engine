					"response": [
						{
							"name": "Success - Batch",
							"status": "OK",
							"code": 200,
							"body": "{\n    \"message\": \"Added 3 candidate(s)\",\n    \"added\": [\"alice@example.com\", \"bob@example.com\", \"carol@example.com\"],\n    \"alreadyExists\": []\n}"
						}
					]
				},
