					"request": {
						"method": "DELETE",
						"header": [
							{
								"key": "X-Admin-API-Key",
								"value": "{{adminApiKey}}"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/admin/candidates/{{email}}",
							"host": ["{{baseUrl}}"],
							"path": ["admin", "candidates", "{{email}}"]
						},
						"description": "Remove a candidate from the eligible list.\n\n**Note:** This does NOT delete their assignment if they already started. It only prevents future attempts."
					},
					"response": [
						{
							"name": "Success",
