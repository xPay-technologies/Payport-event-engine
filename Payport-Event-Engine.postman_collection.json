							"body": "{\n    \"email\": \"candidate@example.com\",\n    \"isEligible\": true,\n    \"addedAt\": \"2026-01-13T10:00:00.000Z\",\n    \"assignmentStatus\": \"not_started\"\n}"
						},
						{
							"name": "Not Eligible",
							"status": "OK",
							"code": 200,
							"body": "{\n    \"email\": \"random@example.com\",\n    \"isEligible\": false,\n    \"assignmentStatus\": \"not_started\"\n}"
