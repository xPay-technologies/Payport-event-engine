		{
			"name": "ðŸ”’ Admin (Evaluator Only)",
			"description": "Admin endpoints for evaluating candidate submissions and managing eligible candidates. These are NOT shared with candidates.",
			"item": [
				{
					"name": "Add Eligible Candidate",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "X-Admin-API-Key",
								"value": "{{adminApiKey}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"candidate@example.com\",\n    \"name\": \"John Doe\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/admin/candidates",
							"host": ["{{baseUrl}}"],
							"path": ["admin", "candidates"]
						},
						"description": "Add a candidate to the eligible list. Only eligible candidates can start the assignment.\n\n**Required fields:**\n- `email`: Candidate's email (single)\n\nOR\n- `emails`: Array of emails (batch add)\n\n**Optional fields:**\n- `name`: Candidate's name (only for single email)"
					},
					"response": [
						{
							"name": "Success - Single",
							"status": "OK",
							"code": 200,
							"body": "{\n    \"message\": \"Added 1 candidate(s)\",\n    \"added\": [\"candidate@example.com\"],\n    \"alreadyExists\": []\n}"
						},
						{
							"name": "Already Exists",
							"status": "OK",
							"code": 200,
							"body": "{\n    \"message\": \"Added 0 candidate(s)\",\n    \"added\": [],\n    \"alreadyExists\": [\"candidate@example.com\"]\n}"
						}
					]
				},
